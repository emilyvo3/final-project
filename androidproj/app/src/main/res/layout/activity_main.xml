<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58595B"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/coursesNames"
        android:layout_width="374dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/orange_text_view"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Enter your courses:"
        android:textColor="@color/white"
        android:textColorHighlight="#FF9800"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="285dp" />

    <EditText
        android:id="@+id/coursesList"
        android:layout_width="378dp"
        android:layout_height="164dp"
        android:background="@drawable/white_text_view"
        android:ems="30"
        android:gravity="left"
        android:hint="(e.g.COSC302, COSC311, ECE313, GEOG101)"
        android:inputType="textPersonName"
        android:textColorHighlight="#FF9800"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="370dp" />

    <EditText
        android:id="@+id/coursesNums"
        android:layout_width="374dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/orange_text_view"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Enter the number of courses:"
        android:textColor="@color/white"
        android:textColorHighlight="#FF9800"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/textBoxNum"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:layout_marginEnd="168dp"
        android:background="@drawable/white_text_view"
        android:ems="30"
        android:gravity="center"
        android:hint="(e.g. 1)"
        android:inputType="textPersonName"
        android:textColorHighlight="#FF9800"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/go"
        android:layout_width="162dp"
        android:layout_height="67dp"
        android:background="@drawable/buttons"
        android:text="Go"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/coursesList"
        app:layout_constraintStart_toStartOf="@+id/coursesList"
        tools:layout_editor_absoluteY="580dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58595B"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="374dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/orange_text_view"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Enter your courses:"
        android:textColor="@color/white"
        android:textColorHighlight="#FF9800"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="285dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="378dp"
        android:layout_height="164dp"
        android:background="@drawable/white_text_view"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Text"
        android:textColorHighlight="#FF9800"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="370dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="374dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/orange_text_view"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Enter the number of courses:"
        android:textColor="@color/white"
        android:textColorHighlight="#FF9800"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="123dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:layout_marginEnd="168dp"
        android:background="@drawable/white_text_view"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Text"
        android:textColorHighlight="#FF9800"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="138dp"
        android:layout_height="67dp"
        android:background="@drawable/buttons"
        android:text="Go"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        tools:layout_editor_absoluteY="580dp" />

</androidx.constraintlayout.widget.ConstraintLayout>